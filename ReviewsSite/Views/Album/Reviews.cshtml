@model ReviewsSite.Models.Album
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Style/StyleSheet.css" rel="stylesheet" />
    <title>Album Reviews</title>
</head>
<body>
    <section class="container">
        <div class="card">
            <h1 class="review-title">@Model.Name Reviews</h1>
            <div class="index-links">
                <a href="/Review/Create">Write a Review</a>
                <br />
                <a href="/Album/Index/">Return to Home</a>
                <br />
                <a href="/Album/Details/@Model.Id">Return to Details</a>
                <hr />
            </div>
            <hr />
            <div class="review">
                @foreach (var review in Model.Reviews)
                {
                    <p>Name: @review.ReviewerName</p>
                    <p>@review.Content</p>
                    <p>Date: @review.ReviewDate</p>
                    <p>Rating: @review.Rating out of 5</p>
                    <div class="index-links">
                        <br />
                        <a class="ud-link" href="/Review/Update/@review.Id">Update Review</a>
                        <a class="ud-link" href="/Review/Delete/@review.Id">Delete Review</a>
                    </div>
                    <hr />
                }
            </div>
        </div>
    </section>
</body>
</html>
