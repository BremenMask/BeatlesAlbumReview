@model ReviewsSite.Models.Album
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Style/StyleSheet.css" rel="stylesheet" />
    <title>Album Details</title>
</head>
<body>
    <section class="container">
        <div class="card">
            <h1 class="title">@Model.Name</h1>
            <img src=/Images/@Model.Image>
            <p>@Model.Category</p>
            <p>@Model.Description</p>
            <hr />

            <p><a href="/Review/CreateByAlbumId/@Model.Id">Write a review for @Model.Name</a></p>
            <p><a href="/Album/Reviews/@Model.Id">Album Reviews</a></p>
            <p><a href="/Album/Index">Return to Albums List</a></p>
        </div>
    </section>

</body>
</html>
