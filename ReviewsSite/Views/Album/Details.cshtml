@model ReviewsSite.Models.Album
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Album Details</title>
</head>
<body>
    <h1>@Model.Name</h1>
    <img src=/Images/@Model.Image>
    <p>@Model.Category</p>
    <p>@Model.Description</p>
    <hr />

    <a href="/Album/Reviews/@Model.Id">Album Reviews</a>
    <br />
    <a href="/Album/Index">Return to Albums List</a>

</body>
</html>
