@model ReviewsSite.Models.Album
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Album Details</title>
</head>
<body>
    <h1>@Model.Name</h1>
    <img src=/Images/@Model.Image>
    <p>@Model.Category</p>
    <p>@Model.Description</p>
    
    @foreach (var review in Model.Reviews)
    {
    <p>@review.Content</p>
    }
    <hr />

    <a href="/Album/Index">Return to Albums List</a>

</body>
</html>
