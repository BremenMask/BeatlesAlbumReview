@model IEnumerable<ReviewsSite.Models.Album>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Style/StyleSheet.css" rel="stylesheet" />
    <title>Across the Universe</title>
</head>
<body>
    <section class="container">
        <h1>Beatles Albums</h1>
        <hr />
        <span><a href="/Review/Index">Show Reviews</a></span>
        <hr />
        @foreach (var album in Model)
        {
            <img height="500px" width="500px" src=/Images/@album.Image>
            <p class="title">Title: <a href="/Album/Details/@album.Id">@album.Name</a></p>
            @*<p class="title">Description: <span>@album.Description</span></p>*@<p class="title"><span></span></p><p class="title"><span></span></p><p class="title"><span></span></p><p class="title"><span></span></p><p class="title"><span></span></p><p class="title"><span></span></p>
            <p class="title">Category: <span>@album.Category</span></p>
            <hr />
        }

    </section>


</body>
</html>
