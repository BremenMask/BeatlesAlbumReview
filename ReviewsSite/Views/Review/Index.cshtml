@model IEnumerable<ReviewsSite.Models.Review>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Style/StyleSheet.css" rel="stylesheet"/>
    <title>Reviews</title>
</head>
<body>
    <section class="container">
        <div class="card">
            <a class="index-link" href="/Album/Index/">Return to Home</a>
            <br />
            <h1 class="review-title">Reviews List</h1>
            <hr/>
            <div class="review">
                @foreach (var review in Model)
                {
                    <p>Name: @review.ReviewerName</p>
                    <p>Album: <a class="album-link" href="/Album/Details/@review.AlbumId">@review.Album.Name</a></p>
                    <p>@review.Content</p>
                    <p>Date: @review.ReviewDate</p>
                    <p>Rating: @review.Rating out of 5</p>
                    <div class="index-links">
                        <br />
                        <a class="ud-link" href="/Review/Update/@review.Id">Update Review</a>
                        <a class="ud-link" href="/Review/Delete/@review.Id">Delete Review</a>
                    </div>
                    <hr />
                }
            </div>
        </div>
    </section>
</body>
</html>
