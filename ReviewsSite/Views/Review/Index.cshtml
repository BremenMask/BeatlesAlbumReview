@model IEnumerable<ReviewsSite.Models.Review>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reviews</title>
</head>
<body>
    <h1> Reviews List</h1>
    @foreach (var review in Model)
    {
        <p>Name: @review.ReviewerName</p>
        <p>@review.Content</p>
        <p>Date: @review.ReviewDate</p>
        <p>Rating: @review.Rating out of 5</p>
        <hr />
    }
</body>
</html>
