@model ReviewsSite.Models.Review
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Style/StyleSheet.css" rel="stylesheet" />
    <title>Delete</title>
</head>
<body>
    <div class="container">
        <h3>Are you sure you want to delete this?</h3>
        <div class="card">
            <h4>Review</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Content)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Content)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ReviewerName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ReviewerName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Rating)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Rating)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ReviewDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ReviewDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Album)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Album.Name)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="button-group">
                    <a asp-action="Index"><input class="button" type="submit" value="Delete" /></a>
                </div>|
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</body>
</html>
