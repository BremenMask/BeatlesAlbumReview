@model ReviewsSite.Models.Review
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="/Style/StyleSheet.css" rel="stylesheet" />
    <title>Write a Review</title>
</head>
<body>
    <section class="container">
        <h2>Write a Review</h2>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Content" class="control-label"></label>
                        <textarea asp-for="Content" class="form-control content-box"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ReviewerName" class="control-label"></label>
                        <input asp-for="ReviewerName" class="form-control" />
                        <span asp-validation-for="ReviewerName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Rating" class="control-label"></label>
                        <input asp-for="Rating" class="form-control" />
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="AlbumId" class="form-control" type="hidden" value="@ViewBag.AlbumId" />
                    </div>
                    <div class="button-group create-by-album-button">
                        <input type="submit" value="Create" class="button" />
                    </div>
                </form>
            </div>
        </div>

        <div class="nav-links">
            <a class="nav-link link" href="/Album/Index">Albums List</a>
        </div>
    </section>
</body>
</html>
